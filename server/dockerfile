FROM node:20-slim

WORKDIR /app

# Copy only package files first (better caching)
COPY server/package*.json ./server/
COPY package*.json ./

# Install workspace deps (server)
RUN npm ci --workspaces --include-workspace-root

# Copy source
COPY server ./server

EXPOSE 8000
ENV HOST=0.0.0.0
ENV PORT=8000

CMD ["npm", "run", "start", "-w", "server"]
